<local:DetailsWindow x:Class="SupportTool.Views.GroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportTool.Views"
		xmlns:controls="clr-namespace:SupportTool.Controls"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Height="600" Width="600">

	<Grid x:Name="ContainerGrid">
		<ScrollViewer>
			<Grid Margin="2">
				<StackPanel>
					<controls:GroupDetails x:Name="GroupDetails"/>

					<controls:GroupGroups x:Name="GroupGroups"/>
				</StackPanel>

				<TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2">
				<Hyperlink x:Name="RefreshHyperlink">Refresh</Hyperlink>
				</TextBlock>
			</Grid>
		</ScrollViewer>
	</Grid>
</local:DetailsWindow>
