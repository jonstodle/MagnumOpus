<Window x:Class="SupportTool.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportTool.Views"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Title="Search" Height="600" Width="400">
	
    <Grid Margin="2">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBox x:Name="SearchQueryTextBox" CharacterCasing="Upper" Margin="2"/>

		<ListView x:Name="SearchResultsListView" Grid.Row="1" Margin="2">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Properties[cn][0]}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="Only showing first 1000 results" Opacity=".5" VerticalAlignment="Center"/>

			<Button x:Name="ChooseButton" Content="Choose" Grid.Column="1" Margin="2"/>
		</Grid>
	</Grid>
</Window>
