<Window x:Class="SupportTool.Views.IPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportTool.Views"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Height="500" Width="400">

	<StackPanel>
		<TextBlock x:Name="IPAddressTextBlock" FontSize="20" Margin="2"/>

		<TextBlock Text="Remote" Margin="2"/>

		<WrapPanel>
			<Button x:Name="LoggedOnButton" Content="Logged on..." Margin="2" />

			<Button x:Name="LoggedOnPlusButton" Content="Logged on +..." Margin="2"/>

			<Button x:Name="RemoteExecutionButton" Content="PSExec..." Margin="2"/>

			<Button x:Name="OpenCButton" Content="Open C:..." Margin="2"/>

			<Button x:Name="RebootButton" Content="Reboot..." Margin="2"/>

			<Button x:Name="RemoteControlButton" Content="Remote control..." Margin="2"/>

			<Button x:Name="RdpButton" Content="RDP..." Margin="2"/>
		</WrapPanel>
	</StackPanel>
</Window>
