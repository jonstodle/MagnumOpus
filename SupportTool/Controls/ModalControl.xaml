<UserControl x:Class="SupportTool.Controls.ModalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<Border x:Name="OverlayGrid">
		<Border.Background>
			<SolidColorBrush Color="Black" Opacity=".7"/>
		</Border.Background>

		<Grid x:Name="ContainerGrid" Background="White" MinWidth="200" MinHeight="300" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
			<ContentPresenter x:Name="ContentPresenter"/>
		</Grid>
	</Border>
</UserControl>
