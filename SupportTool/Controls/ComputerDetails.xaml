<UserControl x:Class="SupportTool.Controls.ComputerDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBox x:Name="CNTextBlock" FontSize="20" Style="{StaticResource TextBlockTextBoxStyle}" Margin="2"/>

        <WrapPanel Opacity=".5" Margin="2">
            <TextBlock Text="Computer"/>
            <TextBlock Text=" | "/>
            <TextBlock x:Name="CompanyTextBlock"/>
            <TextBlock Text=" | "/>
			<TextBlock>
				<Run x:Name="OperatingSystemRun"/>
				<Run x:Name="OperatingSystemCSDRun"/>
				<Run x:Name="OperatingSystemArchitectureRun"/>
			</TextBlock>
			<TextBlock Text=" | "/>
			<TextBox x:Name="IPAddressTextBlock" Style="{StaticResource TextBlockTextBoxStyle}"/>
			<TextBlock Text=" | "/>
            <TextBlock x:Name="LastBootTextBlock"/>
            <TextBlock Text=" | "/>
			<TextBlock x:Name="InstallDateTextBlock"/>
		</WrapPanel>
    </StackPanel>
</UserControl>
