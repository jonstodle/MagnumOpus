<UserControl x:Class="SupportTool.Controls.GroupDescriptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
	<local:FlexPanel>
		<TextBlock Text="Description" Style="{StaticResource SectionHeaderStyle}" Margin="2"/>

		<local:FlexPanel Orientation="Horizontal">
			<TextBox x:Name="DescriptionTextBox" MaxLines="1" local:FlexPanel.Flex="True" Margin="2"/>

			<Button x:Name="SaveButton" Content="Save" Margin="2"/>

			<Button x:Name="CancelButton" Content="Cancel" Margin="2"/>
		</local:FlexPanel>
	</local:FlexPanel>
</UserControl>
