<UserControl x:Class="SupportTool.Controls.GroupNotesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <local:FlexPanel>
		<TextBlock Text="Notes" Style="{StaticResource SectionHeaderStyle}" Margin="2"/>
		
		<TextBox x:Name="NotesTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="100" Margin="2"/>

		<local:FlexPanel Orientation="Horizontal">
			<Button x:Name="EnableEditingButton" Content="Edit" Margin="2"/>

			<Rectangle local:FlexPanel.Flex="True"/>

			<Button x:Name="SaveButton" Content="Save" Margin="2"/>

			<Button x:Name="CancelButton" Content="Cancel" Margin="2"/>
		</local:FlexPanel>
	</local:FlexPanel>
</UserControl>
