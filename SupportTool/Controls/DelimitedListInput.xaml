<UserControl x:Class="SupportTool.Controls.DelimitedListInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupportTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	
    <local:FlexPanel VerticalAlignment="Center">
		<TextBox x:Name="ItemsTextBox" Height="300"/>

		<local:FlexPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button x:Name="OkButton" Content="OK" Margin="2"/>

			<Button x:Name="CancelButton" Content="Cancel" Margin="2"/>
		</local:FlexPanel>
	</local:FlexPanel>
</UserControl>
