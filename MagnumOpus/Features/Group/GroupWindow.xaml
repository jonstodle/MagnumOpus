<mo:DetailsWindow x:Class="MagnumOpus.Group.GroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagnumOpus.Group"
		xmlns:mo="clr-namespace:MagnumOpus"
		x:TypeArguments="local:GroupWindowViewModel"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Height="600" Width="600">

	<Grid x:Name="ContainerGrid">
		<ScrollViewer>
			<Grid Margin="2">
				<StackPanel>
					<local:GroupDetails x:Name="GroupDetails"/>

					<local:GroupDescriptionPanel x:Name="GroupDescription"/>

					<local:GroupGroups x:Name="GroupGroups"/>

					<local:GroupNotesPanel x:Name="GroupNotes"/>
				</StackPanel>

				<TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2">
				<Hyperlink x:Name="RefreshHyperlink">Refresh</Hyperlink>
				</TextBlock>
			</Grid>
		</ScrollViewer>
	</Grid>
</mo:DetailsWindow>
