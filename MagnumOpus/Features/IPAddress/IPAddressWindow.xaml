<local:DetailsWindow x:Class="MagnumOpus.Views.IPAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagnumOpus.Views"
		xmlns:controls="clr-namespace:MagnumOpus.Controls"
		xmlns:vms="clr-namespace:MagnumOpus.ViewModels"
		x:TypeArguments="vms:IPAddressWindowViewModel"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Height="600" Width="600">

	<Grid x:Name="ContainerGrid">
		<ScrollViewer>
			<StackPanel Margin="2">
				<controls:IPAddressPanel x:Name="IPAddressPanel"/>

				<controls:PingPanel x:Name="PingPanel"/>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</local:DetailsWindow>
