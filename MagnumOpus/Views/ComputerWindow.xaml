<local:DetailsWindow x:Class="MagnumOpus.Views.ComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagnumOpus.Views"
		xmlns:controls="clr-namespace:MagnumOpus.Controls"
        mc:Ignorable="d"
		Icon="/Assets/Icon.ico"
        Height="600" Width="600">

	<Grid x:Name="ContainerGrid">
		<ScrollViewer>
			<Grid Margin="2">
				<StackPanel>
					<controls:ComputerDetails x:Name="ComputerDetails"/>

					<controls:RemotePanel x:Name="RemotePanel"/>

					<controls:ComputerManagement x:Name="ComputerManagement"/>

					<controls:PingPanel x:Name="PingPanel"/>

					<controls:ComputerGroups x:Name="ComputerGroups"/>
				</StackPanel>

				<TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="2">
				<Hyperlink x:Name="RefreshHyperlink">Refresh</Hyperlink>
				</TextBlock>
			</Grid>
		</ScrollViewer>
	</Grid>
</local:DetailsWindow>
